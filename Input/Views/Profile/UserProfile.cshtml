@model User

@{
    ViewData["Title"] = $"Профиль {Model.UserName}";
}

<div id="profile" class="container bg-white rounded mt-3 shadow pt-3">
<div class="row">
    <div class="col-lg-6 pl-3">
        <a href="@Model.UserPhoto" data-toggle="lightbox" data-title="@Model.UserName">
            <img class="rounded-circle" src="@Model.UserPhoto" alt="avatar" style="width: 150px; height: 150px; object-fit:cover;">
        </a>
    </div>
    <div class="col-lg-12 pl-3">
        <h1 class="h4">@Model.UserName</h1>
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Лайки</th>
            <th scope="col" style="width: 50px"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in ViewBag.UserFanFictions)
        {
            <tr>
                <th>
                    <a href="/ReadFanFiction/@item.Id" style="text-decoration: none; color: #000 !important;">@item.Name</a>
                </th>
                <td>@item.UserRating.Count</td>
                <td>
                    <a href="/ReadFanFiction/@item.Id" class="btn btn-warning">Перейти</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</div>