@model Input.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row bg-secondary shadow p-3 mb-5 bg-white rounded m-2">
        <div class="col-6 col-md-4">
            <h2 class="display-5">Регистрация</h2>
            <form class="form-group" method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email" placeholder="Введите почту">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName">Имя пользователя</label>
                    <input class="form-control" asp-for="UserName" placeholder="Введите имя пользователя">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <input class="form-control" asp-for="Password" placeholder="Введите пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Повторите пароль</label>
                    <input class="form-control" asp-for="ConfirmPassword" placeholder="Повторите пароль">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>


<style>
    body{
        margin: 0px; 
    }
</style>