<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Input</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/Kendo/styles/kendo.bootstrap-main.css"/>
    <script src="~/lib/Kendo/js/jquery.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.all.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.timezones.min.js"></script>
    <script src="~/lib/Kendo/js/cultures/kendo.culture.ru-RU.min.js"></script>
    <script src="~/lib/Kendo/js/messages/kendo.messages.ru-RU.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light th-color border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" style="font-size: 24px" asp-area="" asp-controller="Home" asp-action="Index">Input</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 d-flex justify-content-between pt-1">
                    <div class="d-sm-inline-flex">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FanFiction" asp-action="AllFanFictions">Все произведения</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Rules">Правила</a>
                        </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FanFiction" asp-action="Create">Создать произведение</a>
                        </li>
                    }
                    </div>
                </ul>
                <ul class="navbar-nav flex-grow-1 justify-content-end pt-1">
                    <li class="nav-item">
                        <form method="get" asp-action="Search" asp-controller="FanFiction">
                            <div class="d-flex flex-row justify-content-start">
                                @if (ViewBag.FanFictionName != null)
                                {
                                    <input type="text" name="fanFictionName" value="@ViewBag.FanFictionName" class="form-control" placeholder="Введите запрос"/>
                                }
                                else
                                {
                                    <input type="text" name="fanFictionName" class="form-control" placeholder="Введите запрос"/>
                                }
                                <button type="submit" class="btn btn-success ml-2">Поиск</button>
                            </div>
                        </form>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle pt-1" href="#" id="navbarDropdown"
                               role="button" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                <img id="avatar" class="rounded-circle" src="" value="" alt="avatar" style="height: 33px; width: 33px; object-fit:cover;"/>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-action="MyProfile" asp-controller="Profile">@User.Claims.ElementAt(1).Value</a>
                                <div class="dropdown-divider"></div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="dropdown-item" asp-action="AdminFandom" asp-controller="Admin">Вселенные</a>
                                    <a class="dropdown-item" asp-action="AdminStatus" asp-controller="Admin">Статусы</a>
                                    <a class="dropdown-item" asp-action="AdminUser" asp-controller="Admin">Пользователи</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-action="FreePosts" asp-controller="Moderation">Модерация</a>
                                    <div class="dropdown-divider"></div>
                                }
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Войти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

@if (User.Identity.IsAuthenticated)
{
    <script>
let avatar = document.getElementById('avatar');
$.get('@Context.Request.Scheme://@Context.Request.Host/Profile/GetUserImage/@User.Claims.ElementAt(0).Value', function(data, status){
    avatar.src = data;
});
</script>
}

<script>
$(document).on('click', '[data-toggle="lightbox"]', function(event) {
    event.preventDefault();
    $(this).ekkoLightbox();
});
</script>
<script src="~/lib/lightbox-master/dist/ekko-lightbox.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>