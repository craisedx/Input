@model List<Input.ViewModels.FanFiction.FanFictionViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
<div class="container-fluid mr-2 ml-1 m-auto">
    <div class="col-xl">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="max-height:400px;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" style="max-height:400px;">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://res.cloudinary.com/fanfancloud/image/upload/v1625907833/2cbb6e47e000cc12cd7ca136774413e8_e9hxsb.jpg" alt="Первый слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://res.cloudinary.com/fanfancloud/image/upload/v1625908530/maxresdefault_echnes.jpg" alt="Второй слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://res.cloudinary.com/fanfancloud/image/upload/v1625908987/57514274079adc7d66da882cb907b7e9_k5g3nu.jpg" alt="Третий слайд">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div id="popular-FanFiction">
            <div class="row mt-5">
                <div class="col-12 bg-secondary shadow p-3 mb-5 bg-white rounded m-1 ">
                    <h1 class="display-5">Самые популярные произведения</h1>
                    <br/>
                    <div class="row justify-content-center">
                        @foreach (var item in ViewBag.BestFandomsByLikes)
                        {
                            <div class="col-6 col-md-3 bg-secondary shadow p-3 mb-5 bg-white rounded m-2">
                                <a href="/ReadFanFiction/@item.FanFiction.Id">
                                    <img src="@item.FanFiction.Photo" class="img-thumbnail responsive" alt="...">
                                </a>
                                <a href="/ReadFanFiction/@item.FanFiction.Id" class="remove-blue-href">
                                    <h4 class="display-5 long-name">@item.FanFiction.Name</h4>
                                </a>
                                <a>
                                    <h5 class="display-5" style="color: #2f224d"><img style="max-width: 16px" src="~/img/user.svg"/>@item.FanFiction.User.UserName</h5>
                                </a>
                                <a>
                                    <h5 class="display-5"><span class="badge badge-info">@item.FanFiction.Fandom.Name</span></h5>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div id="popular-fandoms">
            <div class="row mt-4">
                <div class="col-12 bg-secondary shadow p-3 mb-5 bg-white rounded m-1 ">
                    <h1 class="display-5">Самые популярные вселенные</h1>
                    <br/>
                    <div class="row justify-content-center">
                        @foreach (var item in ViewBag.BestFandoms)
                        {
                            <div class="col-6 col-md-3 bg-secondary shadow p-3 mb-5 bg-white rounded m-2">
                                <h5>
                                    <span class="badge badge-pill badge-success float-right">@item.Count</span>
                                </h5>
                                <a style="color:#000000; text-decoration:none" href="/FanFiction/AllFanFictions?fandomId=@item.Fandom.Id">
                                    <h3 class="display-5">@item.Fandom.Name</h3>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div id="last-added-FanFiction">
            <div class="row mt-4">
                <div class="col-12 bg-secondary shadow p-3 mb-5 bg-white rounded m-1 ">
                    <h1 class="display-5">Последние опубликованные</h1>
                    <br/>
                    <div class="row justify-content-center">
                        @foreach (var item in Model)
                        {
                            <div class="col-6 col-md-3 bg-secondary shadow p-3 mb-5 bg-white rounded m-2">
                                <a href="/ReadFanFiction/@item.Id">
                                    <img src="@item.Photo" class="img-thumbnail responsive" alt="...">
                                </a>
                                <h5 style="margin-top: 6px;">
                                    <span class="badge badge-pill badge-success float-right">Новое!</span>
                                </h5>
                                <a href="/ReadFanFiction/@item.Id" class="remove-blue-href">
                                    <h4 class="display-5 long-name">@item.Name</h4>
                                </a>
                                <a>
                                    <h5 class="display-5" style="color: #2f224d"><img style="max-width: 16px" src="~/img/user.svg"/>@item.User.UserName</h5>
                                </a>
                                <a>
                                    <h5 class="display-5"><span class="badge badge-info">@item.Fandom.Name</span></h5>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>    
</div>