    <div class="nav nav-tabs mb-5 d-flex justify-content-center" id="nav-tab" role="tablist">
        <a class="nav-item nav-link" asp-action="AdminUser" aria-controls="nav-contact" aria-selected="false">Пользователи</a>
        <a class="nav-item nav-link active" asp-action="AdminFandom" aria-controls="nav-contact" aria-selected="false">Вселенные</a>
        <a class="nav-item nav-link" asp-action="AdminStatus" aria-controls="nav-contact" aria-selected="false">Статусы</a>
    </div>
